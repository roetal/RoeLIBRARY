<Window x:Class="Library.AdminMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="AdminMainWindow" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="Images/library backround image.jpg" Stretch="UniformToFill" />
    </Window.Background>

    <Grid>
        <Rectangle Fill="#AAFFFFFF" Margin="0"/>
        <Button Content="back🏠" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="82" Click="Button_Back"/>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,40,0,0" FontSize="36" FontWeight="Bold" Foreground="#2E2E2E">
            Library Admin Mode
        </TextBlock>

        <TextBlock x:Name="GreetingTextBlockAdmin" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" FontSize="20" Foreground="#4B4B4B" Visibility="Collapsed"/>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Height="378" Margin="0,54,0,0">
            <Button Content="Add Books" Width="200" Height="50" Margin="0,10" FontSize="16" Click="AddBook_Click"/>
            <Button Content="View Books" Width="200" Height="50" FontSize="16" Click="ViewBooks_Click"/>
            <Button Content="Add Authors" Width="200" Height="50" Margin="0,10" FontSize="16" Click="AddAuthor_Click"/>
            <Button Content="View Authors" Width="200" Height="50" FontSize="16" Click="ViewAuthors_Click"/>
            <Button Content="View Users" Width="200" Height="50" Margin="0,10" FontSize="16" Click="User_Click"/>
            <Button Content="User Items" Width="200" Height="50" Margin="0,10" FontSize="16" Click="UserItems_Click"/>
        </StackPanel>

        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Content="" HorizontalAlignment="Left" Height="423" Margin="205,93,0,0" VerticalAlignment="Top" Width="681"/>
    </Grid>
</Window>
