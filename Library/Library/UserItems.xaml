<Page x:Class="Library.UserItems"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserItems">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <ListBox x:Name="UsersListBox" DisplayMemberPath="Username" SelectionChanged="UsersListBox_SelectionChanged" />

        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="Active Cart Items" FontWeight="Bold" Margin="0,10,0,5"/>
            <ListBox x:Name="ActiveCartItemsListBox" DisplayMemberPath="BookName"/>

            <TextBlock Text="Expired Cart Items" FontWeight="Bold" Margin="20,10,0,5"/>
            <ListBox x:Name="ExpiredCartItemsListBox" DisplayMemberPath="BookName"/>
        </StackPanel>
    </Grid>
</Page>
