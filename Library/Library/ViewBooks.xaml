<Page x:Class="Library.ViewBooks"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Library"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewBooks">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Books" FontWeight="Bold" FontSize="16" Margin="10"
                   Grid.Row="0" Grid.Column="0"/>

        <ScrollViewer Grid.Row="1" Grid.Column="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Height="300" Margin="10">
            <ListBox x:Name="booksListBox" SelectionChanged="BooksListBox_SelectionChanged" Height="300">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Name}" Width="150"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10" VerticalAlignment="Top">
            <StackPanel.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="Margin" Value="0,0,0,5"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
            </StackPanel.Resources>

            <TextBlock Text="Name:"/>
            <TextBox x:Name="nameTextBox" IsReadOnly="True" Margin="0,0,0,10"/>

            <TextBlock Text="Genre:"/>
            <TextBox x:Name="genreTextBox" IsReadOnly="True" Margin="0,0,0,10"/>

            <TextBlock Text="Author ID:"/>
            <TextBox x:Name="authorIdTextBox" IsReadOnly="True" Margin="0,0,0,10"/>

            <TextBlock Text="Available Copies:"/>
            <TextBox x:Name="availableCopiesTextBox" IsReadOnly="True" Margin="0,0,0,10"/>

            <TextBlock Text="Price:"/>
            <TextBox x:Name="priceTextBox" IsReadOnly="True" Margin="0,0,0,10"/>

            <Button x:Name="updateButton" Content="Update" Click="UpdateButton_Click" Margin="0,10,0,0"/>

            <Button x:Name="deleteButton" Content="Delete" Click="DeleteButton_Click" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Page>
